  "gemSpeedUpCosts": {
    "description": "Gem costs for speeding up timers use linear interpolation between breakpoints. The cost per unit of time decreases significantly for longer durations.",
    "breakpoints": [
      { "duration": "1 minute",  "seconds": 60,     "gemCost": 1 },
      { "duration": "1 hour",    "seconds": 3600,   "gemCost": 20 },
      { "duration": "1 day",     "seconds": 86400,  "gemCost": 260 },
      { "duration": "1 week",    "seconds": 604800, "gemCost": 1000 }
    ],
    "formula": {
      "description": "Linear interpolation between breakpoints: y = ((y2-y1)/(x2-x1)) * (x-x1) + y1, where x is time in seconds and y is gem cost",
      "examples": [
        { "between": "1 min to 1 hour",  "ratePerMinute": "~0.32 gems/min (1 gem per ~3.1 minutes)" },
        { "between": "1 hour to 1 day",  "ratePerMinute": "~0.17 gems/min (1 gem per ~5.75 minutes)" },
        { "between": "1 day to 1 week",  "ratePerMinute": "~0.10 gems/min (1 gem per ~10.1 minutes)" }
      ],
      "discount": "Skipping 1 week costs roughly 90% less per second than skipping 1 minute"
    }
  },
