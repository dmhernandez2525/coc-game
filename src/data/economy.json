  },
  "townHallLootPenalty": {
    "description": "Loot multiplier applied based on the difference between the attacker's and defender's Town Hall levels. Penalties reduce loot when attacking lower TH levels; bonuses increase loot when attacking higher TH levels.",
    "multipliers": [
      { "thDifference": "4+ levels higher (attacking much lower TH)", "lootMultiplier": 5, "note": "Severe penalty" },
      { "thDifference": "3 levels higher", "lootMultiplier": 25 },
      { "thDifference": "2 levels higher", "lootMultiplier": 50 },
      { "thDifference": "1 level higher", "lootMultiplier": 80 },
      { "thDifference": "Same TH level", "lootMultiplier": 100 },
      { "thDifference": "1 level lower (attacking higher TH)", "lootMultiplier": 120 },
      { "thDifference": "2 levels lower", "lootMultiplier": 150 },
      { "thDifference": "3 levels lower", "lootMultiplier": 175 },
      { "thDifference": "4+ levels lower (attacking much higher TH)", "lootMultiplier": 200, "note": "Maximum bonus" }
    ],
    "notes": [
      "The multiplier is applied to the calculated available loot from storages, collectors, and drills.",
      "This penalty does NOT apply to the Treasury (Treasury always loses 3% regardless).",
      "This penalty does NOT affect league bonuses or star bonuses.",
      "All values are percentages (e.g., 80 means the attacker gets 80% of the normal available loot)."
    ]
  },
  "shieldMechanics": {
    "description": "Shield system as of the October 2025 Ranked Update. The old tiered shield system (12h/14h/16h based on destruction %) has been replaced by the Magic Shield.",
    "magicShield": {
      "triggerCondition": "At least 30% of available loot is stolen by the attacker in a Battle Mode attack",
      "duration": "8 hours",
      "notes": [
        "Duration is fixed at 8 hours regardless of destruction percentage or loot amount taken.",
        "Players can attack freely while shielded; the shield does not reduce when attacking.",
        "While shielded, attackers face a shadow version of your base, so no actual loot is lost.",
        "Shields do NOT trigger from Ranked Battles, Clan Wars, Friendly Challenges, Practice Mode, or Single Player Campaign.",
        "1 Dark Elixir is considered equivalent to 100 Gold or Elixir for the 30% calculation."
      ]
    },
    "legacyShieldSystem": {
      "note": "Replaced by Magic Shield in October 2025. Listed here for historical reference.",
      "thresholds": [
        { "destructionPercent": 30, "shieldDuration": "12 hours", "additionalCondition": "Attacker used at least 1/3 of max army capacity" },
        { "destructionPercent": 60, "shieldDuration": "14 hours" },
        { "destructionPercent": 90, "shieldDuration": "16 hours" }
      ]
    },
